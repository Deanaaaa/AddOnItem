<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555">
    <ImageView
        android:id="@+id/q_id_every_talk_item_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/q_id_every_talk_item_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="name"/>
        <TextView
            android:id="@+id/q_id_every_talk_item_talk"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:text="talk talk talk"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/q_id_every_talk_item_time"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="17/08/21"/>
        <TextView
            android:id="@+id/q_id_every_talk_item_noSeeNumber"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#666"
            android:text="1"
            android:textColor="#fff"/>
    </LinearLayout>

</LinearLayout>