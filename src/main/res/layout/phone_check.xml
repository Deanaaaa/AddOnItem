<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/verify_background">

    <Button
        android:id="@+id/q_id_phoneCheck_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="15.33dp"
        android:layout_marginLeft="11dp"
        android:background="@drawable/verify_back"/>
    <RelativeLayout
        android:layout_marginLeft="132dp"
        android:layout_marginTop="12.67dp"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/r_background"
        >
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/register_logo_icon"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="40dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12.67dp"
            android:src="@drawable/verify_phone_icon" />
        <EditText
            android:id="@+id/q_id_phoneCheck_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.67dp"
            android:layout_marginTop="14dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:textCursorDrawable="@drawable/cursor"
            android:background="@null"
            android:hint="请输入你的手机号"/>

    </LinearLayout>

    <ImageView
        android:layout_width="280dp"
        android:layout_height="1px"
        android:layout_marginLeft="40dp"
        android:background="#fff"/>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="1px"
        android:layout_marginLeft="40dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12.67dp"
            android:src="@drawable/verify_code_icon" />
        <EditText
            android:id="@+id/q_id_phoneCheck_check"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.67dp"
            android:layout_marginTop="6dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="16sp"
            android:textCursorDrawable="@drawable/cursor"
            android:background="@null"
            android:hint="请输入验证码"/>
        
        <ImageView
            android:layout_width="1px"
            android:layout_height="36dp"
            android:layout_marginTop="6dp"
            android:background="#fff"/>

        <Button
            android:id="@+id/q_id_phoneCheck_send"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="1px"
            android:background="#00000000"
            android:textColor="#fff"
            android:textSize="16sp"
            android:text="获取验证码"/>

    </LinearLayout>

    <ImageView
        android:layout_width="280dp"
        android:layout_height="1px"
        android:layout_marginLeft="40dp"
        android:background="#fff"/>
    <TextView
        android:id="@+id/q_id_phoneCheck_checkFalse"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginLeft="40dp"
        android:textSize="16sp"
        android:textColor="#92675c"
        />

    <Button
        android:id="@+id/q_id_phoneCheck_sure"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="30.33dp"
        android:layout_marginLeft="40dp"
        android:textSize="16sp"
        android:background="@drawable/r_background"
        android:text="注册"
        android:textColor="#fff"/>
</LinearLayout>